<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="uno.zhuchen.echonotejava.Mapper.UserMapper">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(userName, password, email, enabled) VALUES
        (#{userName}, #{password}, #{email}, #{enabled})

    </insert>
    <update id="updateUser">
        UPDATE user
        <set>
            <if test="userName != null">
                userName = #{userName},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="enabled != null">
                enabled = #{enabled}
            </if>
        </set>
    </update>
    <update id="changeEnabledUser">
        UPDATE user
        SET enabled = #{enabled}
        WHERE id = #{id}
    </update>

    <select id="findByUsername" resultType="uno.zhuchen.echonotejava.Project.User.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

</mapper>